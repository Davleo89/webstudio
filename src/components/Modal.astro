---

<div id="modal-wrapper" class="hidden fixed inset-0 bg-[#757575]/80 overflow-y-auto h-full w-full">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3 text-center">
      <div class="items-center absolute right-3 top-3">
        <a id="close-modal-btn" class="p-2 text-[#212121] text-base font-medium shadow-sm">
          <svg  xmlns="http://www.w3.org/2000/svg" class="hover:text-[#2196f3]" width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-square-x"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 5a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-14z" /><path d="M9 9l6 6m0 -6l-6 6" /></svg>
        </a>
      </div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        TÃ­tulo del Modal
      </h3>
      <div class="mt-2 px-7 py-3">
        <p class="text-sm text-gray-500">
          Este es el contenido de tu modal.
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  const modalWrapper = document.getElementById('modal-wrapper');

  document.addEventListener('click', (event) => {
    if (event.target && event.target.id === 'open-modal-btn') {
      event.preventDefault();
      modalWrapper.classList.remove('hidden');
    }
  });

  document.addEventListener('click', (event) => {
    if (event.target && event.target.id === 'close-modal-btn') {
      event.preventDefault();
      modalWrapper.classList.add('hidden');
    }
  });
</script>
