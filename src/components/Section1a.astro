<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterLinks = document.querySelectorAll('.filter-link');
    const projectItems = document.querySelectorAll('[data-category]');

    filterLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const filterValue = e.target.dataset.filter;

        // Elimina la clase activa de todos los enlaces y la agrega al que fue clickeado
        filterLinks.forEach(item => {
          item.classList.remove('bg-[#2196f3]', 'text-white');
          item.classList.add('bg-[#F5F4FA]', 'text-[#212121]');
        });
        e.target.classList.remove('bg-[#F5F4FA]', 'text-[#212121]');
        e.target.classList.add('bg-[#2196f3]', 'text-white');

        // Lógica de filtrado de los proyectos
        projectItems.forEach(item => {
          if (filterValue === 'todos' || item.dataset.category === filterValue) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  });
</script>